{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "outDir": "./lib",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "importsNotUsedAsValues": "error",
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
